{
  "manifest_version": 3,
  "name": "ESPN Fantasy Trade Evaluator",
  "version": "1.0",
  "description": "Evaluates ESPN Fantasy Football player trade positions on the page.",
  "permissions": ["activeTab", "scripting"],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html"
  },
  "content_scripts": [
    {
      "matches": ["https://fantasy.espn.com/*"],
      "js": ["content.js"]
    }
  ]
}